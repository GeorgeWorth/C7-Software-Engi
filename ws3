class Hospital:
	def __init__(self, Name, Street, Postcode, Cefmd):
		self.Name = Name
		self.Street = Street
		self.Postcode = Postcode
		self.Cefmd = Cefmd
	
class Ward:
	def __init__(self, Hospital, Name, Type, Gender, Cap):
		self.Hospital = Hospital
		self.Name = Name
		self.Type =  Type
		self.Gender = Gender
		self.Cap = Cap		
	
class Staff:
	def __init__(self, Id, FirName, SecName, Priv):
		self.Id = Id
		self.FirName = FirName
		self.SecName =  SecName
		self.Priv = Priv
	
	def GetName(self):
		return (self.FirName)
	
	
## Inheritance from Staff
class Doctor(Staff):
	def __init__(self, Id, Type, Ward, Team, Spec, FirName, SecName, Priv):
		Staff.__init__(self, Id, FirName, SecName, Priv)
		self.Type = Type
		self.Ward = Ward
		self.Team = Team
		self.Spec = Spec
	
	def GetEmployee(self):
		return self.GetName() + ", " +  self.Type
	
	

x = Doctor("1", "1", "Steven", "4", "Cancer", "Brandon", "Slater", "1")
print(x.GetEmployee())
